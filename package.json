{
  "name": "comelit-hub-client",
  "version": "1.0.0",
  "author": "Pierpaolo Follia",
  "repository": {
    "type": "git",
    "url": "https://github.com/madchicken/comelit-hub-client"
  },
  "description": "Comelit HUB CLI interface",
